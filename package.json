    "@vitest/ui": "2.1.1",
    "eslint": "8.57.0",
    "npm-run-all": "4.1.5",
    "prisma": "5.19.1",
    "supertest": "7.0.0",
    "tsup": "^8.2.4",
    "tsx": "^4.19.1",
